<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_primary_btn"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/paste_btn"
        style="@style/TextAppearance.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.85"
        android:foreground="@drawable/btn_ripple"
        android:padding="16dp"
        android:text="@string/paste_btn_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        tools:ignore="UnusedAttribute" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="4dp"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/paste_settings_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.15"
        android:contentDescription="@null"
        android:foreground="@drawable/btn_ripple"
        android:src="@drawable/ic_play_arrow_48"
        tools:ignore="UnusedAttribute" />
</LinearLayout>